    <script>
        function checkBaggageWeight() {
            let weight = document.getElementById("bw").value;
            weight = parseFloat(weight);            if (isNaN(weight) || weight <= 0) {
                alert("Please enter a valid weight.");
                return;
            }
                      if (weight > 15) {
                alert("Your bag is overweight.The limit is 15kg.");
            } else {
                alert(" Your bag weight is correct.");
            }
        }
    </script>
</head>
<body>
    <h2>Check Your Baggage Weight</h2>
    <p>Enter your baggage weight and click submit:</p>
    <input type="text" id="bw" placeholder="Enter weight in kg"> <br> <br> 
    <button onclick="checkBaggageWeight()">Submit</button>
</body>
